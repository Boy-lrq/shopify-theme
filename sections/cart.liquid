<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>购物车 - U-Mall</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .modal {
          display: none;
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.5);
      }

      .modal-content {
          position: relative;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          background: white;
          padding: 2rem;
          border-radius: 0.5rem;
          max-width: 400px;
      }
    </style>
  </head>
  <body>
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center">
        <h1 class="text-2xl font-bold text-orange-500">U-Mall</h1>
        <div class="ml-8 flex items-center">
          <span class="text-xl font-semibold">购物车</span>
          <span class="ml-2 text-gray-500 cart-count">(0)</span>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 py-6">
      <div class="flex gap-6">
        <div class="flex-1 bg-white p-6 rounded-lg shadow-sm" id="cartItems">
          <!-- 商品列表动态插入 -->
        </div>

        <!-- 结算栏 -->
        <div class="w-96 bg-white p-6 rounded-lg shadow-sm h-fit">
          <!-- 结算信息动态更新 -->
        </div>
      </div>
    </main>

    <!-- 优惠券弹窗 -->
    <div class="modal" id="couponModal">
      <div class="modal-content">
        <h3 class="text-xl font-bold">限时优惠券</h3>
        <p class="my-4">立即领取满 ¥299 减 ¥30 优惠券</p>
        <button id="claimCoupon" class="bg-orange-500 text-white px-4 py-2 rounded">立即领取</button>
      </div>
    </div>

    <script>
        // 模拟数据
        const cartInfo = [
            {
                id: 1,
                userId: 1,
                productId: 1,
                name: "【年度会员】喜马拉雅VIP会员",
                specs: "12个月 自动续费",
                price: 198,
                quantity: 1,
                image: "https://pic1.zhimg.com/70/v2-682cef8220ab72084df1a551452e8ede_300w.avis"
            }
        ];

        // 状态管理
        let state = {
            items: [...cartInfo],
            selectedIds: [],
            coupon: 0
        };

        // 初始化
        function init() {
            renderCartItems();
            updateSummary();
            setupEventListeners();
            checkCouponTrigger();
        }

        // 渲染商品列表
        function renderCartItems() {
            const container = document.getElementById('cartItems');
            container.innerHTML = `
                ${state.items.length > 0 ? `
                    <div class="flex items-center mb-4">
                        <input type="checkbox" id="selectAll" 
                            ${state.selectedIds.length === state.items.length ? 'checked' : ''}
                            class="w-4 h-4 text-orange-500 rounded border-gray-300">
                        <span class="ml-2 text-gray-600">全选</span>
                    </div>
                ` : ''}
                ${state.items.map(item => `
                    <div class="flex items-center py-4 border-b">
                        <input type="checkbox" 
                            ${state.selectedIds.includes(item.id) ? 'checked' : ''}
                            data-id="${item.id}"
                            class="item-checkbox w-4 h-4 text-orange-500 rounded border-gray-300">
                        <img src="${item.image}" class="w-32 h-32 object-cover rounded-lg ml-4">
                        <div class="ml-6 flex-1">
                            <h3 class="text-lg font-medium">${item.name}</h3>
                            <p class="text-gray-500 mt-1">${item.specs}</p>
                            <div class="flex items-center mt-4">
                                <span class="text-xl font-bold text-orange-500">¥${item.price}</span>
                                <div class="ml-8 flex items-center border rounded-lg">
                                    <button data-id="${item.id}" class="decrement px-3 py-1 text-gray-500 hover:bg-gray-100">-</button>
                                    <span class="px-4 quantity">${item.quantity}</span>
                                    <button data-id="${item.id}" class="increment px-3 py-1 text-gray-500 hover:bg-gray-100">+</button>
                                </div>
                            </div>
                        </div>
                        <div class="flex gap-4 ml-6">
                            <button data-id="${item.id}" class="delete text-gray-400 hover:text-orange-500">删除</button>
                        </div>
                    </div>
                `).join('') || `
                    <div class="py-8 text-center text-gray-500">
                        购物车中没有商品，<a href="/" class="text-orange-500 hover:underline">去添加</a>
                    </div>
                `}
            `;

            document.querySelector('.cart-count').textContent = `(${state.items.length})`;
        }

        // 更新结算信息
        function updateSummary() {
            const subtotal = state.items.reduce((sum, item) => 
                state.selectedIds.includes(item.id) ? sum + item.price * item.quantity : sum, 0);
            
            document.querySelector('#cartItems + div').innerHTML = `
                <div class="space-y-4">
                    <div class="flex justify-between">
                        <span>商品总价</span>
                        <span>¥${subtotal}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>优惠</span>
                        <span class="text-red-500">-¥${state.coupon}</span>
                    </div>
                    <div class="pt-4 border-t">
                        <div class="flex justify-between text-xl font-bold">
                            <span>实付款</span>
                            <span class="text-orange-500">¥${subtotal - state.coupon}</span>
                        </div>
                    </div>
                    <button class="w-full py-4 bg-orange-500 text-white rounded-lg hover:bg-orange-600">
                        去结算 (${state.selectedIds.length})
                    </button>
                </div>
            `;
        }

        // 事件监听
        function setupEventListeners() {
            // 全选
            document.getElementById('selectAll')?.addEventListener('change', toggleAll);
            
            // 单项选择
            document.querySelectorAll('.item-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', () => toggleItem(Number(checkbox.dataset.id)));
            });

            // 数量调整
            document.querySelectorAll('.increment').forEach(btn => {
                btn.addEventListener('click', () => adjustQuantity(Number(btn.dataset.id), 1));
            });
            
            document.querySelectorAll('.decrement').forEach(btn => {
                btn.addEventListener('click', () => adjustQuantity(Number(btn.dataset.id), -1));
            });

            // 删除商品
            document.querySelectorAll('.delete').forEach(btn => {
                btn.addEventListener('click', () => deleteItem(Number(btn.dataset.id)));
            });

            // 领取优惠券
            document.getElementById('claimCoupon').addEventListener('click', () => {
                state.coupon = 30;
                document.getElementById('couponModal').style.display = 'none';
                updateSummary();
            });
        }

        // 核心功能函数
        function toggleAll() {
            state.selectedIds = state.selectedIds.length === state.items.length ? 
                [] : state.items.map(i => i.id);
            renderCartItems();
            updateSummary();
        }

        function toggleItem(id) {
            state.selectedIds = state.selectedIds.includes(id) ?
                state.selectedIds.filter(i => i !== id) :
                [...state.selectedIds, id];
            updateSummary();
        }

        function adjustQuantity(id, delta) {
            state.items = state.items.map(item => 
                item.id === id ? {...item, quantity: Math.max(1, item.quantity + delta)} : item
            );
            renderCartItems();
            updateSummary();
        }

        function deleteItem(id) {
            state.items = state.items.filter(item => item.id !== id);
            state.selectedIds = state.selectedIds.filter(i => i !== id);
            renderCartItems();
            updateSummary();
        }

        // 优惠券触发逻辑
        function checkCouponTrigger() {
            const subtotal = state.items.reduce((sum, item) => sum + item.price * item.quantity, 0);
            if (subtotal >= 299) {
                document.getElementById('couponModal').style.display = 'block';
            }
        }

        // 启动
        init();
    </script>
  </body>
</html>
