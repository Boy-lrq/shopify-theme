{% comment %} 静态购物车数据构造 {% endcomment %}
{% assign cart = hash %}
{% assign cart.items = array %}
{% assign cart.items[0] = hash %}
{% assign cart.items[0].id = 1 %}
{% assign cart.items[0].title = "男士运动跑鞋" %}
{% assign cart.items[0].price = 29900 %}
{% assign cart.items[0].line_price = 59800 %}
{% assign cart.items[0].quantity = 2 %}
{% assign cart.items[0].image = "https://cdn.shopify.com/s/files/1/0001/0002/products/shoe.jpg" %}
{% assign cart.items[0].variant_id = 40194800615511 %}
{% assign cart.items[0].properties = hash %}

{% assign cart.items[1] = hash %}
{% assign cart.items[1].id = 2 %}
{% assign cart.items[1].title = "无线蓝牙耳机" %}
{% assign cart.items[1].price = 89900 %}
{% assign cart.items[1].line_price = 89900 %}
{% assign cart.items[1].quantity = 1 %}
{% assign cart.items[1].image = "https://cdn.shopify.com/s/files/1/0001/0002/products/earphone.jpg" %}
{% assign cart.items[1].variant_id = 40194800615512 %}
{% assign cart.items[1].properties = hash %}

{% assign cart.total_price = 149700 %}
{% assign cart.item_count = 3 %}
{% assign cart.currency = "CNY" %}

{% assign discount_code = 'SUMMER30' %}
{% assign discount_amount = 3000 %}

<div class="min-h-screen bg-gray-50 font-sans">
  <!-- 头部 -->
  <header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-2xl font-bold bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">
            U-Mall
          </span>
        </a>
        <div class="flex items-center space-x-4">
          <span class="text-gray-600">购物车</span>
          <span class="bg-orange-100 text-orange-600 px-2.5 py-0.5 rounded-full text-sm font-medium">
            {{ cart.item_count }}
          </span>
        </div>
      </div>
    </div>
  </header>

  <!-- 主要内容 -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- 商品列表 -->
      <div class="lg:col-span-2 space-y-6">
        {% for item in cart.items %}
          <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="flex p-6">
              <!-- 商品图片 -->
              <div class="flex-shrink-0 w-32 h-32">
                <img
                  src="{{ item.image }}"
                  alt="{{ item.title }}"
                  class="w-full h-full object-cover rounded-lg"
                >
              </div>

              <!-- 商品信息 -->
              <div class="ml-6 flex-1">
                <h3 class="text-lg font-semibold text-gray-900">{{ item.title }}</h3>

                <!-- 价格信息 -->
                <div class="mt-4 flex items-center justify-between">
                  <div class="flex items-center space-x-6">
                    <span class="text-2xl font-bold text-orange-500">
                      ¥{{ item.price | divided_by: 100 | round: 2 }}
                    </span>
                    <div class="inline-flex items-center border border-gray-200 rounded-lg">
                      <span class="px-4 py-1 text-gray-700">{{ item.quantity }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- 订单摘要 -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm p-6 sticky top-24">
          <h2 class="text-xl font-bold text-gray-900 mb-6">订单摘要</h2>

          <div class="space-y-4">
            <!-- 价格明细 -->
            <div class="flex justify-between text-gray-600">
              <span>商品总价</span>
              <span class="font-medium">¥{{ cart.total_price | divided_by: 100 | round: 2 }}</span>
            </div>

            <div class="flex justify-between text-green-600">
              <span>运费减免</span>
              <span class="font-medium">- ¥0.00</span>
            </div>

            <div class="flex justify-between text-red-600">
              <span>优惠折扣 ({{ discount_code }})</span>
              <span class="font-medium">- ¥{{ discount_amount | divided_by: 100 }}</span>
            </div>

            <!-- 分隔线 -->
            <div class="border-t border-gray-200 my-4"></div>

            <!-- 实付金额 -->
            <div class="flex justify-between text-lg font-bold text-gray-900">
              <span>总金额</span>
              <span class="text-orange-500">
                ¥{{ cart.total_price | minus: discount_amount | divided_by: 100 | round: 2 }}
              </span>
            </div>

            <!-- 操作按钮 -->
            <button
              class="
                w-full mt-6 py-3.5 bg-gradient-to-r from-orange-400 to-orange-500 text-white rounded-lg
                font-medium hover:from-orange-500 hover:to-orange-600 transition-all duration-200
                disabled:opacity-50 disabled:cursor-not-allowed
              "
              disabled
            >
              安全结算 ({{ cart.items.size }})
            </button>
          </div>

          <!-- 促销信息 -->
          <div class="mt-6 pt-4 border-t border-gray-200">
            <div class="flex items-start space-x-2">
              <div class="flex-shrink-0 mt-1">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-sm text-gray-500">
                已自动应用优惠码 <span class="font-medium text-green-600">{{ discount_code }}</span><br>
                订单满 ¥199 享免运费
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* 自定义渐变文字 */
  .gradient-text {
    @apply bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent;
  div{
    backage-color :read;
  }
  }
</style>
