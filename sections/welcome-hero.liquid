{% comment %} 静态购物车数据构造 {% endcomment %}
{% assign cart = hash %}
{% assign cart.items = array %}
{% assign cart.items[0] = hash %}
{% assign cart.items[0].id = 1 %}
{% assign cart.items[0].title = "男士运动跑鞋" %}
{% assign cart.items[0].price = 29900 %}
{% assign cart.items[0].line_price = 59800 %}
{% assign cart.items[0].quantity = 2 %}
{% assign cart.items[0].image = "https://cdn.shopify.com/s/files/1/0001/0002/products/shoe.jpg" %}
{% assign cart.items[0].variant_id = 40194800615511 %}
{% assign cart.items[0].properties = hash %}

{% assign cart.items[1] = hash %}
{% assign cart.items[1].id = 2 %}
{% assign cart.items[1].title = "无线蓝牙耳机" %}
{% assign cart.items[1].price = 89900 %}
{% assign cart.items[1].line_price = 89900 %}
{% assign cart.items[1].quantity = 1 %}
{% assign cart.items[1].image = "https://cdn.shopify.com/s/files/1/0001/0002/products/earphone.jpg" %}
{% assign cart.items[1].variant_id = 40194800615512 %}
{% assign cart.items[1].properties = hash %}

{% assign cart.total_price = 149700 %}
{% assign cart.item_count = 3 %}
{% assign cart.currency = "CNY" %}

{% assign discount_code = 'SUMMER30' %}
{% assign discount_amount = 3000 %}

<div class="min-h-screen bg-gray-50">
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center">
      <h1 class="text-2xl font-bold text-orange-500">U-Mall</h1>
      <div class="ml-8 flex items-center">
        <span class="text-xl font-semibold">购物车</span>
        <span class="ml-2 text-gray-500">({{ cart.item_count }})</span>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 py-6">
    <div class="flex gap-6">
      <!-- 商品列表 -->
      <div class="flex-1 bg-white p-6 rounded-lg shadow-sm">
        {% for item in cart.items %}
          <div class="flex items-center py-4 border-b">
            <img
              src="{{ item.image }}"
              alt="{{ item.title }}"
              class="w-32 h-32 object-cover rounded-lg"
            >
            <div class="ml-6 flex-1">
              <h3 class="text-lg font-medium">{{ item.title }}</h3>
              <div class="flex items-center mt-4">
                <span class="text-xl font-bold text-orange-500"> ¥{{ item.price | divided_by: 100 | round: 2 }} </span>
                <div class="ml-8 flex items-center border rounded-lg">
                  <span class="px-4">{{ item.quantity }}</span>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- 结算栏 -->
      <div class="w-96 bg-white p-6 rounded-lg shadow-sm h-fit">
        <div class="space-y-4">
          <div class="flex justify-between">
            <span>商品总价</span>
            <span>¥{{ cart.total_price | divided_by: 100 | round: 2 }}</span>
          </div>

          <div class="flex justify-between">
            <span>运费</span>
            <span class="text-green-500">免运费</span>
          </div>

          <div class="flex justify-between">
            <span>优惠 ({{ discount_code }})</span>
            <span class="text-red-500">-¥{{ discount_amount | divided_by: 100 }}</span>
          </div>

          <div class="pt-4 border-t">
            <div class="flex justify-between text-xl font-bold">
              <span>实付款</span>
              <span class="text-orange-500">
                ¥{{ cart.total_price | minus: discount_amount | divided_by: 100 | round: 2 }}
              </span>
            </div>
          </div>

          <button
            class="w-full py-4 bg-orange-500 text-white rounded-lg cursor-not-allowed"
            disabled
          >
            去结算 ({{ cart.items.size }})
          </button>
        </div>

        <div class="mt-6 p-4 bg-gray-50 rounded-lg">
          <p class="text-sm text-gray-500">
            · 已自动应用优惠码：{{ discount_code -}}
            <br>
            · 已享受免运费优惠
          </p>
        </div>
      </div>
    </div>
  </main>
</div>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
