<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>产品详情页</title>
    <style>
      /* 此处放置所有CSS样式 */
      .product-detail-container {
          padding: 20px;
          max-width: 1200px;
          margin: 0 auto;
          font-family: 'Arial', sans-serif;
      }

      .breadcrumb {
          margin-bottom: 20px;
          font-size: 14px;
          color: #666;
      }

      .product-detail-container {
          padding: 20px;
          max-width: 1200px;
          margin: 0 auto;
          font-family: 'Arial', sans-serif;
      }

      .breadcrumb {
          margin-bottom: 20px;
          font-size: 14px;
          color: #666;
      }

      .breadcrumb a {
          color: #666;
          text-decoration: none;
          margin: 0 5px;
      }

      .breadcrumb span {
          margin-left: 5px;
          color: #333;
          font-weight: 500;
      }

      .product-main-content {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 30px;
          margin-bottom: 40px;
      }

      .product-gallery {
          display: flex;
          flex-direction: column;
      }

      .main-image-container {
          position: relative;
          margin-bottom: 15px;
          border-radius: 8px;
          overflow: hidden;
      }

      .main-image {
          width: 100%;
          height: 450px;
          object-fit: cover;
          border-radius: 8px;
          transition: transform 0.3s;
      }

      .main-image:hover {
          transform: scale(1.03);
      }

      .discount-badge {
          position: absolute;
          top: 15px;
          left: 15px;
          background-color: #ff4d4f;
          color: white;
          padding: 5px 10px;
          border-radius: 4px;
          font-size: 12px;
          font-weight: bold;
      }

      .thumbnail-gallery {
          display: flex;
          gap: 10px;
      }

      .thumbnail {
          width: 80px;
          height: 80px;
          border-radius: 4px;
          overflow: hidden;
          cursor: pointer;
          border: 2px solid #eee;
      }

      .thumbnail:hover {
          border-color: #1890ff;
      }

      .thumbnail img {
          width: 100%;
          height: 100%;
          object-fit: cover;
      }

      .product-info {
          display: flex;
          flex-direction: column;
          gap: 15px;
      }

      .product-title {
          font-size: 28px;
          font-weight: 600;
          color: #333;
          margin: 0;
      }

      .product-subtitle {
          font-size: 16px;
          color: #666;
          margin-bottom: 10px;
      }

      .rating {
          display: flex;
          align-items: center;
          margin-bottom: 10px;
      }

      .review-count {
          margin-left: 8px;
          color: #666;
          font-size: 14px;
      }

      .price-container {
          display: flex;
          align-items: baseline;
          gap: 10px;
          margin: 15px 0;
      }


      .sale-price {
          font-size: 28px;
          font-weight: bold;
          color: #ff4d4f;
      }

      .original-price {
          font-size: 18px;
          color: #999;
          text-decoration: line-through;
      }

      .discount-tag {
          background-color: #fff2e8;
          color: #fa541c;
          padding: 4px 8px;
          border-radius: 4px;
          font-size: 14px;
          font-weight: 500;
      }

      .discount-percent {
          font-size: 12px;
          font-weight: bold;
      }

      .coupon-applied {
          display: flex;
          align-items: center;
          background-color: #f6ffed;
          border: 1px solid #b7eb8f;
          border-radius: 6px;
          padding: 12px;
          margin: 10px 0;
      }

      .coupon-icon {
          font-size: 24px;
          margin-right: 10px;
      }

      .coupon-details {
          flex: 1;
      }

      .coupon-title {
          font-weight: 600;
          color: #52c41a;
      }

      .coupon-expiry {
          display: flex;
          justify-content: space-between;
          font-size: 13px;
          color: #666;
          margin-top: 3px;
      }

      .countdown {
          font-weight: 600;
          color: #fa541c;
      }

      .product-meta {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 10px;
          margin: 10px 0;
          padding: 15px 0;
          border-top: 1px solid #eee;
          border-bottom: 1px solid #eee;
      }

      .meta-item {
          display: flex;
          flex-direction: column;
          gap: 5px;
      }

      .meta-label {
          font-size: 12px;
          color: #999;
      }

      .meta-value {
          font-size: 14px;
          color: #333;
      }

      .in-stock {
          color: #52c41a;
          font-weight: 500;
      }


      .delivery-info {
          display: flex;
          justify-content: space-between;
          padding: 15px 0;
          border-bottom: 1px solid #eee;
      }

      .delivery-item {
          display: flex;
          align-items: center;
          font-size: 14px;
          color: #666;
      }

      .delivery-icon {
          margin-right: 5px;
          font-size: 16px;
      }

      .quantity-selector {
          display: flex;
          align-items: center;
          margin: 20px 0;
      }

      .quantity-label {
          margin-right: 15px;
          font-size: 15px;
          color: #333;
      }

      .quantity-controls {
          display: flex;
          align-items: center;
          border: 1px solid #ddd;
          border-radius: 4px;
          overflow: hidden;
      }

      .quantity-btn {
          width: 40px;
          height: 40px;
          background: #f5f5f5;
          border: none;
          font-size: 18px;
          cursor: pointer;
          transition: all 0.3s;
      }

      .quantity-btn:hover {
          background: #e6e6e6;
      }

      .quantity-input {
          width: 50px;
          height: 40px;
          border: none;
          border-left: 1px solid #ddd;
          border-right: 1px solid #ddd;
          text-align: center;
          font-size: 16px;
      }

      .stock-status {
          margin-left: 15px;
          font-size: 14px;
          color: #666;
      }

      .action-buttons {
          display: flex;
          gap: 15px;
          margin-top: 20px;
      }

      .buy-now-btn {
          background-color: #ff4d4f !important;
          border-color: #ff4d4f !important;
          height: 48px !important;
          font-size: 16px !important;
          flex: 2;
      }

      .add-to-cart-btn {
          background-color: #fff !important;
          border-color: #ff4d4f !important;
          color: #ff4d4f !important;
          height: 48px !important;
          font-size: 16px !important;
          flex: 2;
      }

      .favorite-btn {
          background-color: #fff !important;
          border-color: #ddd !important;
          color: #666 !important;
          height: 48px !important;
          font-size: 16px !important;
          flex: 1;
      }


      .product-description h3 {
          font-size: 20px;
          margin-bottom: 20px;
          color: #333;
      }

      .product-description p {
          font-size: 15px;
          line-height: 1.6;
          color: #444;
          margin-bottom: 25px;
      }


      .feature-text h4 {
          font-size: 18px;
          margin-bottom: 8px;
          color: #333;
      }

      .feature-text p {
          font-size: 14px;
          color: #666;
          margin: 0;
          line-height: 1.5;
      }

      .detail-images img {
          width: 100%;
          border-radius: 8px;
          box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }


      .recommended-product img {
          width: 100%;
          height: 200px;
          object-fit: cover;
      }


      /* Responsive styles for smaller screens */
      @media (max-width: 992px) {
          .product-main-content {
              grid-template-columns: 1fr;
          }


          .product-meta {
              grid-template-columns: 1fr 1fr;
          }
      }

      @media (max-width: 576px) {


          .action-buttons {
              flex-direction: column;
          }


      }
    </style>
  </head>
  <body>
    {% assign product_title = '示例商品' %}
    {% assign original_price = 59900 | money %}
    {% assign sale_price = 39900 | money %}
    {% assign stock = 50 %}
    {% assign product_image = 'https://pic1.zhimg.com/70/v2-682cef8220ab72084df1a551452e8ede_300w.avis' %}

    <div class="product-detail-container">
      <div class="breadcrumb">
        <a href="{{ shop.url }}">首页</a> &gt; <a href="{{ shop.url }}/collections/all">商品列表</a> &gt;
        <span>{{ product_title }}</span>
      </div>

      <div class="product-main-content">
        <div class="product-gallery">
          <div class="main-image-container">
            <img src="{{ product_image }}" alt="{{ product_title }}" class="main-image">
            <div class="discount-badge">限时优惠</div>
          </div>
          <div class="thumbnail-gallery">
            {% for i in (1..4) %}
              <div class="thumbnail">
                <img src="{{ product_image }}" alt="图片{{ i }}">
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="product-info">
          <h1 class="product-title">{{ product_title }}</h1>
          <div class="product-subtitle">精选高品质产品，为您提供极致体验</div>

          <div class="rating">★★★★★<span class="review-count">4.8 (128条评价)</span></div>

          <div class="price-container">
            <div class="sale-price">{{ sale_price }}</div>
            <div class="original-price">{{ original_price }}</div>
            <div class="discount-tag">
              省{{ original_price | minus: sale_price | money }}
              <div class="discount-percent">33% OFF</div>
            </div>
          </div>

          <div class="coupon-applied">
            <div class="coupon-icon">🎟️</div>
            <div class="coupon-details">
              <div class="coupon-title">优惠券已生效!</div>
              <div class="coupon-expiry">
                <span>有效期至: 2025-02-27</span>
                <span class="countdown">23:59:59</span>
              </div>
            </div>
          </div>

          <div class="product-meta">
            <div class="meta-item">
              <span class="meta-label">商品编号:</span>
              <span class="meta-value">#1</span>
            </div>
            <div class="meta-item">
              <span class="meta-label">类别:</span>
              <span class="meta-value">电子产品</span>
            </div>
            <div class="meta-item">
              <span class="meta-label">库存状态:</span>
              <span class="meta-value in-stock">
                {% if stock > 0 %}有货{% else %}缺货{% endif %}
              </span>
            </div>
          </div>

          <div class="delivery-info">
            <div class="delivery-item">
              <span class="delivery-icon">🚚</span>
              <span>预计3-5天送达</span>
            </div>
            <div class="delivery-item">
              <span class="delivery-icon">💰</span>
              <span>满99元包邮</span>
            </div>
            <div class="delivery-item">
              <span class="delivery-icon">🔄</span>
              <span>7天无理由退换</span>
            </div>
          </div>

          <div class="quantity-selector">
            <span class="quantity-label">数量:</span>
            <div class="quantity-controls">
              <button class="quantity-btn" onclick="handleDecrement()">-</button>
              <input type="text" class="quantity-input" value="1" readonly>
              <button class="quantity-btn" onclick="handleIncrement()">+</button>
            </div>
            <span class="stock-status">库存 {{ stock }} 件</span>
          </div>

          <div class="action-buttons">
            <button class="buy-now-btn">立即购买</button>
            <button class="add-to-cart-btn" onclick="addToCart()">加入购物车</button>
            <a href="{{ routes.cart_url }}">
              <button class="favorite-btn">前往购物车</button>
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
    // 使用Shopify的货币格式化函数
    const moneyFormat = {{ shop.money_format | json }};
    
    // 保持原有JavaScript逻辑
    let quantity = 1;
    const stockLimit = {{ stock }};

    function handleIncrement() {
        if (quantity < stockLimit) quantity++;
        updateQuantityDisplay();
    }

    function handleDecrement() {
        if (quantity > 1) quantity--;
        updateQuantityDisplay();
    }

    function updateQuantityDisplay() {
        document.querySelector('.quantity-input').value = quantity;
    }

    function addToCart() {
        const item = {
            id: 1,
            quantity: quantity,
            properties: {}
        };
        
        // 模拟Shopify AJAX API调用
        fetch('/cart/add.js', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(item)
        }).then(() => {
            alert(`已添加 ${quantity} 件商品到购物车`);
        });
    }
    </script>
  </body>
</html>
