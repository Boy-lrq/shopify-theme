{% comment %} 模板文件: templates/cart.liquid {% endcomment %}
{% layout 'theme' %}

<div class="min-h-screen bg-gray-50">
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center">
      <h1 class="text-2xl font-bold text-orange-500">{{ shop.name }}</h1>
      <div class="ml-8 flex items-center">
        <span class="text-xl font-semibold">购物车</span>
        <span class="ml-2 text-gray-500">({{ cart.item_count }})</span>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 py-6">
    <div class="flex gap-6">
      <div class="flex-1 bg-white p-6 rounded-lg shadow-sm">
        {% if cart.item_count == 0 %}
          <div class="py-8 text-center text-gray-500">
            购物车中没有商品，<a href="/" class="text-orange-500 hover:underline">去添加</a>
          </div>
        {% else %}
          <div class="flex items-center mb-4">
            <input
              type="checkbox"
              id="select-all"
              class="w-4 h-4 text-orange-500 rounded border-gray-300"
            />
            <label for="select-all" class="ml-2 text-gray-600">全选</label>
          </div>
          
          {% for item in cart.items %}
            <div class="flex items-center py-4 border-b cart-item" data-variant-id="{{ item.variant_id }}">
              <input
                type="checkbox"
                class="item-checkbox w-4 h-4 text-orange-500 rounded border-gray-300"
              />
              <img
                src="{{ item.image | img_url: '300x300' }}"
                alt="{{ item.title }}"
                class="w-32 h-32 object-cover rounded-lg ml-4"
              />
              <div class="ml-6 flex-1">
                <h3 class="text-lg font-medium">{{ item.product.title }}</h3>
                <p class="text-gray-500 mt-1">{{ item.variant.title }}</p>
                <div class="flex items-center mt-4">
                  <span class="text-xl font-bold text-orange-500">
                    ¥{{ item.final_line_price | money_without_currency }}
                  </span>
                  <div class="ml-8 flex items-center border rounded-lg">
                    <button
                      class="quantity-btn px-3 py-1 text-gray-500 hover:bg-gray-100"
                      data-action="decrease"
                    >-</button>
                    <input
                      type="number"
                      value="{{ item.quantity }}"
                      class="quantity-input px-4 w-16 text-center"
                      min="1"
                    />
                    <button
                      class="quantity-btn px-3 py-1 text-gray-500 hover:bg-gray-100"
                      data-action="increase"
                    >+</button>
                  </div>
                </div>
              </div>
              <div class="flex gap-4 ml-6">
                <button
                  class="remove-btn text-gray-400 hover:text-orange-500"
                  data-variant-id="{{ item.variant_id }}"
                >
                  删除
                </button>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <!-- 结算栏 -->
      <div class="w-96 bg-white p-6 rounded-lg shadow-sm h-fit">
        <div class="space-y-4">
          <div class="flex justify-between">
            <span>商品总价</span>
            <span>¥{{ cart.total_price | money_without_currency }}</span>
          </div>
          <div class="pt-4 border-t">
            <div class="flex justify-between text-xl font-bold">
              <span>实付款</span>
              <span class="text-orange-500">¥{{ cart.total_price | money_without_currency }}</span>
            </div>
          </div>
          <a href="/checkout" class="block w-full py-4 bg-orange-500 text-white text-center rounded-lg hover:bg-orange-600 transition-colors">
            去结算 (<span class="selected-count">0</span>)
          </a>
          <a href="/" class="block mt-4 w-full py-4 bg-blue-500 text-white text-center rounded-lg hover:bg-blue-600 transition-colors">
            返回首页
          </a>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 数量调整
  document.querySelectorAll('.quantity-btn').forEach(button => {
    button.addEventListener('click', async (e) => {
      const action = e.target.dataset.action;
      const input = e.target.parentElement.querySelector('.quantity-input');
      let quantity = parseInt(input.value);

      if (action === 'increase') {
        quantity++;
      } else {
        quantity = Math.max(1, quantity - 1);
      }

      await updateCartItem(
        e.target.closest('.cart-item').dataset.variantId,
        quantity
      );
    });
  });

  // 删除商品
  document.querySelectorAll('.remove-btn').forEach(button => {
    button.addEventListener('click', async () => {
      const variantId = button.dataset.variantId;
      await updateCartItem(variantId, 0);
      button.closest('.cart-item').remove();
    });
  });

  // 全选功能
  document.getElementById('select-all').addEventListener('change', (e) => {
    const checkboxes = document.querySelectorAll('.item-checkbox');
    checkboxes.forEach(checkbox => checkbox.checked = e.target.checked);
    updateSelectedCount();
  });

  // 单个选择
  document.querySelectorAll('.item-checkbox').forEach(checkbox => {
    checkbox.addEventListener('change', updateSelectedCount);
  });

  async function updateCartItem(variantId, quantity) {
    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify({
          id: variantId,
          quantity
        })
      });

      const cart = await response.json();
      location.reload(); // 简单重载更新数据
    } catch (error) {
      console.error('Error updating cart:', error);
    }
  }

  function updateSelectedCount() {
    const selected = document.querySelectorAll('.item-checkbox:checked').length;
    document.querySelector('.selected-count').textContent = selected;
  }
});
</script>

<style>
/* 添加必要的Tailwind样式到theme.css */
@import url('https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css');

